<!DOCTYPE html>
<html lang="en" data-theme="{{.Theme}}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {{if .RefreshSeconds}}<meta http-equiv="refresh" content="{{.RefreshSeconds}}">{{end}}
  <title>{{.Title}}</title>
  <style>{{.CSS}}</style>
</head>
<body>
  <div class="dashboard-header">
    <h1>{{.Title}}</h1>
    <div class="generated">Generated {{.GeneratedAt}}</div>
  </div>
  {{range .Groups}}
  <div class="group">
    <div class="group-header">{{.Name}}</div>
    <div class="tiles">
      {{range .Tiles}}
      {{if .Link}}<a class="tile" href="{{.Link}}" target="_blank" rel="noopener">{{else}}<div class="tile">{{end}}
        {{if .HasIcon}}
        {{if .IconData}}
        <img class="tile-icon" src="{{.IconData}}" alt="{{.Name}}">
        {{else}}
        <div class="tile-icon-placeholder">{{firstChar .Name}}</div>
        {{end}}
        {{end}}
        <div class="tile-name">{{.Name}}</div>
        {{if .Slots}}
        <div class="tile-slots">
          {{range .Slots}}
          <div class="slot" {{if .Output}}data-tooltip="{{.Output}}"{{end}}>
            <span class="slot-label">{{.Label}}</span>
            <span class="slot-name">{{.Name}}</span>
          </div>
          {{end}}
        </div>
        {{end}}
        {{if .BannerURI}}
        <div class="tile-banner">
          <img src="{{.BannerURI}}" alt="{{.Name}}">
        </div>
        {{end}}
      {{if .Link}}</a>{{else}}</div>{{end}}
      {{end}}
    </div>
  </div>
  {{end}}
  <footer class="dashboard-footer">
    Generated by <a href="https://github.com/halfdane/ilias" target="_blank" rel="noopener">ilias</a> {{.Version}}
  </footer>
</body>
</html>
